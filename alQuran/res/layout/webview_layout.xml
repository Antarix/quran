<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

     <RelativeLayout
        style="@style/SearchTitleBar"
        android:gravity="center_vertical">

         <Button android:background="@drawable/search_button_selector" style="@style/ButtonText"
            android:layout_alignParentLeft="true" android:text="@string/back" android:layout_centerVertical="true"
            android:onClick="close" />
         
        <TextView
            android:id="@+id/webview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="@string/about"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:textStyle="bold"
            android:src="@drawable/search" />
        
    </RelativeLayout>
    
    <WebView
        android:id="@+id/webView_local"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>
